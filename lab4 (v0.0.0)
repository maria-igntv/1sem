import pygame
from pygame.draw import *
from random import randint
pygame.init()

FPS = 2
screen = pygame.display.set_mode((1200, 900))

RED = (255, 0, 0)
BLUE = (0, 0, 255)
YELLOW = (255, 255, 0)
GREEN = (0, 255, 0)
MAGENTA = (255, 0, 255)
CYAN = (0, 255, 255)
BLACK = (0, 0, 0)
COLORS = [RED, BLUE, YELLOW, GREEN, MAGENTA, CYAN]
MOVEMENT = [-5, -4, -3, -2, -1, 1, 2, 3, 4, 5]

def new_ball():
    '''
    Функция рисует новый шарик
    '''
    pass

    global x, y, r
    x = randint(100, 1100)
    y = randint(100, 900)
    r = randint(10, 100)
    color = COLORS[randint(0, 5)]
    circle(screen, color, (x, y), r)
    
    global x_b, y_b, r_b, color_b
    x_b = x
    y_b = y
    r_b = r
    color_b = color
    
    
def move_ball():
    '''
    Функция передвигает наприсованный ранее шарик
    '''
    pass

    global x_b, y_b, r_b, color_b
    
    move = 30*MOVEMENT[randint(0, 9)]
    x_b += move
    y_b += move
    circle(screen, color_b, (x_b, y_b), r_b)


pygame.display.update()
clock = pygame.time.Clock()
finished = False

score = 0


while not finished:
    new_ball()
    clock.tick(FPS)
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            finished = True
        elif event.type == pygame.MOUSEBUTTONDOWN:
            if (event.pos[0] - x)**2 + (event.pos[1] - y)**2 <=r**2 :
                score +=1 
                print('Click!  ' + str(x) + ',' + str(y))
                print ('Score : ', score)
                
    move_ball()
    
    pygame.display.update()
    screen.fill(BLACK)


pygame.quit()
